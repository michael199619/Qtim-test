{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "declaration": false,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/files/**/*.ts",
        "src/files/**/*.template"
    ]
}