{
  "name": "test-backend",
  "version": "0.0.1",
  "description": "Test backend",
  "author": "Basov Michael",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "gen:usecase": "nest g usecase --project",
    "build:common": "nest build common",
    "build:service": "ts-node scripts/service-runner.ts build",
    "start:service": "ts-node scripts/service-runner.ts start",
    "dev:service": "ts-node scripts/service-runner.ts start:dev",
    "start": "ts-node scripts/service-runner.ts start:all",
    "dev": "ts-node scripts/service-runner.ts start:all --dev",
    "typeorm": "ts-node -r tsconfig-paths/register ./scripts/typeorm",
    "format": "prettier --write \"apps/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{apps,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nota-backend/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/platform-express": "^11.0.1",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "env-var": "^7.5.0",
    "inquirer": "^12.10.0",
    "kafkajs": "^2.2.4",
    "nats": "^2.29.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-morph": "^27.0.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@angular-devkit/schematics-cli": "^20.3.6",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.1",
    "@types/supertest": "^6.0.2",
    "commander": "^14.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "ioredis-mock": "^8.13.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "schematics": "file:./tools/schematics",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  },
  "workspaces": [
    "apps/*"
  ]
}
